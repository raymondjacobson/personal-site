/**** copy Raymond Jacobson 2014 ****/

/* MIXINS */
fader(prop, seconds)
  -webkit-transition prop seconds linear
  -moz-transition prop seconds linear
  -ms-transition prop seconds linear
  -o-transition prop seconds linear
  transition prop seconds linear

/* DEFINITIONS */
// colors
// MAIN_GRAY = #7ca19e
// MAIN_GRAY = #a18c8d
MAIN_GRAY = #A1A1A1
PALE_BLUE = #677891
PALE_ORANGE = #9f7359
PALE_RED = #5D4649
.bg-gray
  background lighten(MAIN_GRAY, 40%)

/* TYPOGRAPHY */
h1
  font-size 2em
p
  font-size 0.9em
  letter-spacing 0.1em
  font-weight 400
  line-height 1.3em
  &.me
    font-size 1.2em
    line-height 1.2em
    font-weight bold
    letter-spacing 0.2em
    word-spacing 0.3em
a
  fader(color, 0.2s)
  text-decoration none 
  color darken(MAIN_GRAY, 30%)
  &:hover
    color lighten(MAIN_GRAY, 20%)
  &.orange
    color PALE_ORANGE
    border-bottom 1px dotted PALE_ORANGE
    &:hover
      color lighten(PALE_ORANGE, 30%)
      border-bottom 1px dotted lighten(PALE_ORANGE, 30%)
  &.blue
    color PALE_BLUE
    border-bottom 1px dotted PALE_BLUE
    &:hover
      color lighten(PALE_BLUE, 30%)
      border-bottom 1px dotted lighten(PALE_BLUE, 30%)

/* GLOBALS */
body
  margin 0
  padding 0
  font-family 'Lato', Helvetica, sans-serif
  background lighten(MAIN_GRAY, 80%)

footer
  margin 0 auto
  padding-bottom 10px
  text-align center
  p 
    text-transform uppercase
    font-size 0.2em
    font-weight bold
    letter-spacing 0.3em
    small
      font-size 0.1rem
      font-weight 300
      letter-spacing 0.2em
.cf:before,
.cf:after
  content " "
  display table

.nav
  padding-top 10px
  text-align center
  a, a:hover
    padding 0 2px
    border none
    i
      font-size 1.2em

.cf
  *zoom 1
  &:after
    clear both

.justify-text
  text-align justify

.center-text
  text-align center

.pull-right
  float right

.pull-left
  float left

.pad
  &.pad-small
    padding-top 100px
  &.pad-large
    padding-top 190px
  padding-bottom 50px

/* SPECIFICS */
div.mid-box
  text-align center
  margin-left auto
  margin-right auto

img.headshot
  fader(all, 0.2s)
  border-radius 200px
  padding 10px
  border 1px solid PALE_BLUE
  width 200px
  opacity 0.9
  &:hover
    border 1px solid lighten(PALE_BLUE, 30%)
    opacity 0.6